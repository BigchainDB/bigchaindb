{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "$ref": "#/definitions/sha3_hexdigest"
        },
        "transaction": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "fulfillments",
                "conditions",
                "operation",
                "timestamp",
                "metadata",
                "asset"
            ],
            "properties": {
                "fulfillments": {
                    "type": "array",
                    "required": [
                        "current_owners",
                        "input",
                        "fulfillment",
                        "fid"
                    ],
                    "items": {
                        "fid": {
                            "type": "integer"
                        },
                        "current_owners": {
                            "$ref": "#/definitions/owners_list"
                        },
                        "fulfillment": {
                            "type": "string"
                        },
                        "input": {
                            "anyOf": [
                                {
                                    "$ref": "#/definitions/sha3_hexdigest"
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        }
                    }
                },
                "timestamp": {
                    "type": "string"
                },
                "operation": {
                    "type": "string",
                    "enum": [
                        "CREATE",
                        "TRANSFER",
                        "GENESIS"
                    ]
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "owners_after",
                            "condition",
                            "amount"
                        ],
                        "properties": {
                            "cid": {
                                "type": "integer"
                            },
                            "condition": {
                                "type": "object",
                                "additionalProperties": false,
                                "required": [
                                    "uri"
                                ],
                                "properties": {
                                    "details": {
                                        "type": "object",
                                        "additionalProperties": true
                                    },
                                    "uri": {
                                        "type": "string"
                                    }
                                }
                            },
                            "owners_after": {
                                "$ref": "#/definitions/owners_list"
                            },
                            "amount": {
                                "type": "integer"
                            }
                        }
                    }
                },
                "metadata": {
                    "anyOf": [
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "id",
                                "data"
                            ],
                            "properties": {
                                "data": {
                                    "type": "object",
                                    "additionalProperties": true
                                },
                                "id": {
                                    "$ref": "#/definitions/uuid4"
                                }
                            }
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "asset": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "id"
                    ],
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/uuid4"
                        },
                        "divisible": {
                            "type": "boolean"
                        },
                        "updatable": {
                            "type": "boolean"
                        },
                        "refillable": {
                            "type": "boolean"
                        },
                        "data": {
                            "anyOf": [
                                {
                                    "type": "object",
                                    "additionalProperties": true
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        }
                    }
                }
            }
        },
        "version": {
            "type": "integer",
            "minimum": 1,
            "maximum": 1
        }
    },
    "definitions": {
        "base58": {
            "pattern": "[1-9a-zA-Z^OIl]{43,44}",
            "type": "string"
        },
        "owners_list": {
            "anyOf": [
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/base58"
                    }
                },
                {
                    "type": "null"
                }
            ]
        },
        "sha3_hexdigest": {
            "pattern": "[0-9a-f]{64}",
            "type": "string"
        },
        "uuid4": {
            "pattern": "[a-f0-9]{8}-[a-f0-9]{4}-4[a-f0-9]{3}-[89ab][a-f0-9]{3}-[a-f0-9]{12}",
            "type": "string"
        }
    }
}
