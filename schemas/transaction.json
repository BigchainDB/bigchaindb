{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://www.bigchaindb.com/schemas/myschema.json",

    "definitions": {
        "sha3_hexdigest": {
            "type": "string",
            "pattern": "[0-9a-f]{64}"
        },
        "base58": {
            "type": "string",
            "pattern": "[1-9a-zA-Z^OIl]{43,44}"
        },
        "owners_list": {
            "anyOf": [{
                "type": "array",
                "items": {
                    "$ref": "#/definitions/base58"
                }
            }, {
                "type": "null"
            }]
        }
    },

    "type": "object",

    "properties": {
        "id": {
            "$ref": "#/definitions/sha3_hexdigest"
        },
        "version": {
            "type": "integer",
            "minimum": 1,
            "maximum": 1
        },
        "transaction": {
            "type": "object",
            "properties": {
                "fulfillments": {
                    "type": "array",
                    "items": {
                        "current_owners": {
                            "$ref": "#/definitions/owners_list"
                        },
                        "input": {
                            "anyOf": [{
                                "$ref": "#/definitions/sha3_hexdigest"
                            }, {
                                "type": "null"
                                }
                            ]
                        },
                        "fulfillment": {
                            "type": "string"
                        },
                        "fid": {
                            "type": "integer"
                        }
                    },
                    "required": ["current_owners", "input", "fulfillment", "fid"]
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "new_owners": {
                                "$ref": "#/definitions/owners_list"
                            },
                            "condition": {
                                "type": "object",
                                "properties": {
                                    "details": {
                                        "type": "object"
                                    },
                                    "uri": {
                                        "type": "string"
                                    }
                                },
                                "required": ["uri"]
                            },
                            "cid": {
                                "type": "integer"
                            }
                        },
                        "required": ["new_owners", "condition", "cid"]
                    }
                },
                "operation": {
                    "type": "string",
                    "enum": ["CREATE", "TRANSFER"]
                },
                "timestamp": {
                    "type": "string",
                    "pattern": "\\d{10}\\.\\d{6}"
                },
                "data": {
                    "anyOf": [{
                        "type": "object",
                        "properties": {
                            "hash": { "$ref": "#/definitions/sha3_hexdigest" },
                            "payload": {
                                "type": "object"
                            }
                        },
                        "required": ["hash", "payload"]
                    }, {
                        "type": "null"
                    }]
                }
            },
            "required": ["fulfillments", "conditions", "operation", "timestamp", "data"]
        }
    },
    "required": ["id", "version", "transaction"]
}

